<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Nagłówek -->
    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modyfikacja treningu"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Pole do wprowadzenia nazwy treningu -->
    <EditText
        android:id="@+id/editTextTrainingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nazwa treningu" />

    <!-- Pole do wprowadzenia poziomu treningu -->
    <EditText
        android:id="@+id/editTextTrainingLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Poziom treningu" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Zapisz zmiany" />

        <Button
            android:id="@+id/buttonSave2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Zapisz do historii" />

    </LinearLayout>

</LinearLayout>
